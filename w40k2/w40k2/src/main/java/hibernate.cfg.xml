<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration
    PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
    "[http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/test1</property>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.username">test1</property>
		<property name="hibernate.connection.password">test1</property>
		
		<property name="hibernate.show_sql">true</property>
		
		<mapping class="com.w40k2.model.Role"/>
		<mapping class="com.w40k2.model.Figurine"/>
	</session-factory>
</hibernate-configuration>